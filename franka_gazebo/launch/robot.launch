<launch>
  <!-- parameters for spawning robot -->
  <arg name="robot_name"/>
  <arg name="init_pose"/>

  <!-- load robot_description -->
  <param name="/$(arg robot_name)/robot_description" command="$(find xacro)/xacro --inorder $(find franka_description)/robots/panda_arm_hand.urdf.xacro" />

  <!-- spawn robot -->
  <node name="spawn_model" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" args="$(arg init_pose) -param robot_description -urdf -model $(arg robot_name)"/>

  <!-- load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find franka_control)/config/panda_gazebo_controllers.yaml" command="load"/>

  <!-- spawn the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" args="--namespace=/$(arg robot_name) joint_state_controller arm_position_controller hand_position_controller" />

  <!-- run robot_state_publisher for tf -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="true" output="screen" />

</launch>
